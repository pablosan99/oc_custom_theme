<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <AspNetCoreHostingModel>InProcess</AspNetCoreHostingModel>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <RootNamespace>OrchardCore.Cms.Web1</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <Folder Include="wwwroot\"/>
        <Folder Include="Localization\"/>
    </ItemGroup>

    <!-- Watcher include and excludes -->
    <ItemGroup>
        <Watch Include="**\*.cs" Exclude="Recipes\**;Assets\**;node_modules\**\*;**\*.js.map;obj\**\*;bin\**\*"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="OrchardCore.Logging.Serilog" Version="2.1.6"/>
        <PackageReference Include="OrchardCore.Application.Cms.Targets" Version="2.1.6"/>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\OrchardCore.Theme1\OrchardCore.Theme1.csproj" />
      <ProjectReference Include="..\OrchardCore.Theme\OrchardCore.Theme.csproj" />
    </ItemGroup>

</Project>
